@model IEnumerable<ZarzadzanieNotatkami.Models.Note>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="list-inline">
    <p class="list-inline-item">Sort title: </p>
    <form asp-action="SortAsc" method="post" class="list-inline-item">
        <button class="btn btn-primary" type="submit">Sort ascending</button>
    </form>

    <form asp-action="SortDesc" method="post" class="list-inline-item">
        <button class="btn btn-primary" type="submit">Sort descending</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
