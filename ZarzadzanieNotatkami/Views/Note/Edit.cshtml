@model NoteUsersViewModel

@{
    ViewData["Title"] = "Edit";
    List<SelectListItem> userItems = Model.Users.ConvertAll(user =>
    {
        return new SelectListItem
        {
            Text = user.Name,
            Value = user.Id.ToString()
        };
    });
}

<h1>Edit</h1>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Note.Id" />
            <div class="form-group">
                <label asp-for="Note.Title" class="control-label"></label>
                <input asp-for="Note.Title" class="form-control" />
                <span asp-validation-for="Note.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.Text" class="control-label"></label>
                <input asp-for="Note.Text" class="form-control" />
                <span asp-validation-for="Note.Text" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Note.Important" /> @Html.DisplayNameFor(model => model.Note.Important)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Note.User.Name"></label>
                <select asp-items="userItems" asp-for="SelectedUser"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
