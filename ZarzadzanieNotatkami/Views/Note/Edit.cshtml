@model NoteUsersViewModel

@{
    ViewData["Title"] = "Edit";
    List<SelectListItem> userItems = Model.Users.ConvertAll(user =>
    {
        return new SelectListItem
        {
            Text = user.Name,
            Value = user.Id.ToString()
        };
    });
}

<h1>Edit</h1>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Note.Id" />
            <div class="form-group">
                <label asp-for="Note.Title" class="control-label"></label>
                <input asp-for="Note.Title" class="form-control" />
                <span asp-validation-for="Note.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.Text" class="control-label"></label>
                <textarea id="txtAreaNoteText" style="width: 600px; height: 400px;" asp-for="Note.Text" class="form-control"></textarea>
                <span asp-validation-for="Note.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="button" onclick="insertText('<b></b>')" class="btn btn-light">B</button>
                <button type="button" onclick="insertText('<i></i>')" class="btn btn-light">I</button>
                <button type="button" onclick="insertText('<strike></strike>')" class="btn btn-light">Strike</button>
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" asp-for="Note.Important" />
                <label asp-for="Note.Important" class="control-label"></label>
            </div>
            <div class="form-group">
                <label asp-for="Note.User.Name"></label>
                <select asp-items="userItems" asp-for="SelectedUser"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script type="text/javascript">
        function insertText(textToInsert) {
            var noteText = document.getElementById('txtAreaNoteText');
            var noteTextValue = noteText.value;

            var beginSelStart = noteText.selectionStart;
            var newValue = noteTextValue.substring(0, noteText.selectionStart)
                + textToInsert + noteTextValue.substring(noteText.selectionStart);
            noteText.value = newValue;
            noteText.focus();
            noteText.selectionStart = beginSelStart + textToInsert.length/2;
            noteText.selectionEnd = beginSelStart + textToInsert.length / 2;
        }

    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
