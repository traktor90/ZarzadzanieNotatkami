@model NoteUsersViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Note.Id" />
            <div class="form-group">
                <label asp-for="Note.Title" class="control-label"></label>
                <input asp-for="Note.Title" class="form-control" />
                <span asp-validation-for="Note.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.Text" class="control-label"></label>
                <textarea id="txtAreaNoteText" style="width: 600px; height: 400px;" asp-for="Note.Text" class="form-control"></textarea>
                <span asp-validation-for="Note.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="button" onclick="insertText('<b></b>','txtAreaNoteText')" class="btn btn-light">B</button>
                <button type="button" onclick="insertText('<i></i>','txtAreaNoteText')" class="btn btn-light">I</button>
                <button type="button" onclick="insertText('<strike></strike>','txtAreaNoteText')" class="btn btn-light">Strike</button>
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" asp-for="Note.Important" />
                <label asp-for="Note.Important" class="control-label"></label>
            </div>
            <div class="form-group">
                <label asp-for="Note.User.Name"></label>
                <select asp-items="Model.userItems" asp-for="SelectedUser"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
